<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textAppearance="?android:attr/textAppearance"
    android:textColor="@drawable/chip_text"
    app:chipIconEnabled="true"
    app:chipIcon="@drawable/ic_garage"
    app:chipIconTint="@color/colorAccent"
    app:chipBackgroundColor="@drawable/chip_bg"
    app:chipStrokeColor="@color/colorAccent"
    app:chipStrokeWidth="1dp"
    tools:text="1 to 3 Rooms"
    style="@style/Widget.MaterialComponents.Chip.Choice" />